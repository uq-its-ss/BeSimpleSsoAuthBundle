<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="be_simple.sso_auth.protocol.saml.class">BeSimple\SsoAuthBundle\Sso\Saml\Protocol</parameter>
        <parameter key="be_simple.sso_auth.server.saml.class">BeSimple\SsoAuthBundle\Sso\Saml\Server</parameter>
    </parameters>

    <services>
        <service id="be_simple.sso_auth.protocol.saml" class="%be_simple.sso_auth.protocol.saml.class%">
            <tag name="be_simple.sso_auth.protocol" id="saml"/>
        </service>

        <service id="be_simple.sso_auth.server.saml" class="%be_simple.sso_auth.server.saml.class%">
            <tag name="be_simple.sso_auth.server" id="saml"/>
        </service>
    </services>
</container>
